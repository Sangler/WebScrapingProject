<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Link STYLE CSS -->
    <link rel="stylesheet" href="./css/index.css" type="text/css">
    <title>PROJECT 1</title>
    </head>

<body>

<%- include('../layout/header_unauth')%>
<!-- Body start here  -->
    <div class="container">
        <div class="logo">
            <img src="https://img.freepik.com/free-vector/bird-colorful-logo-gradient-vector_343694-1365.jpg?w=740&t=st=1695405695~exp=1695406295~hmac=493a9afaee5605f37d99e542cbe462ea367f88d70fdd8fc28b9d2aeca456552b" 
            id="top-img" style="width:20%; height:20%;"></img>
        </div>

        <div class="heading"><h1>CREATE ACCOUNT</h1></div>
        
        <div class="inside">
            <form  id="the-form" action="/register" method="post" class="validate">
                <label for="email" name="email"></label>
                <input type="text" id="userinput" placeholder="Please enter email" 
                   name="email" required/>
                <label for="username" name="username"></label>
                <input type="text" id="userinput" placeholder="Please enter user name" 
                   name="username" required/>
             <!-- END  -->
                <div class="inside">
                        <label for="pass" name="password"></label>
                        <input name="password" type="password" id="pass" placeholder="New password" style='padding:auto; margin:0;'/>
                        <label for="re-pass" name="userpwd"></label>
                        <input name="userpwd" type="password" id="re-pass" placeholder="Confirm password" style='padding:auto; margin:0;'name="pass"/>
                        <button type="submit" class="login"  id="btn" style="margin:10px 0;">SIGN UP</button>
                        <div class="forget-pass">
                            <a href="#">Forgot password?</a>
                            <br>
                            <a href="/login"> Back to Sign In</a>
                        </div>
                </div>
            </form>
        </div>
    </div>


    
<!-- javascript -->
<script src="./js/event.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
    
        //check passworÄ‘ before submit!
        document.getElementById('the-form').addEventListener('submit', function(event) {
            const password = document.getElementById('pass').value;
            const confirmPassword = document.getElementById('re-pass').value;
            if (password !== confirmPassword){
                event.preventDefault();
            };
        });

    });
</script>

</body>
